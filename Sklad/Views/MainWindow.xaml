<mah:MetroWindow  x:Class="Sklad.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Sklad"
        xmlns:vm="clr-namespace:Sklad.ViewModels"
        xmlns:mah="http://metro.mahapps.com/winfx/xaml/controls"
        mc:Ignorable="d"
        MinHeight="530" MinWidth="450"
        Title="Skladový systém" Height="550" Width="450" SizeToContent="Width" WindowStartupLocation="CenterScreen">

    <Window.DataContext>
        <vm:MainWindowVM/>
    </Window.DataContext>
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <StackPanel HorizontalAlignment="Center" Margin="10">

            <Image Source="../Images/Logo.png" HorizontalAlignment="Center" Width="256"/>

            <TextBlock Text="Skladový systém" FontSize="40"  HorizontalAlignment="Center" Margin="10"
                       VerticalAlignment="Center"/>



        </StackPanel>

        <Border BorderBrush="AliceBlue" BorderThickness="5" Grid.Row="1"/>

        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <GroupBox Header="Tabulky" Grid.Column="0" 
                      Margin="10" Padding="5" 
                       IsEnabled="{Binding TabulkyPovoleny}"
                      FontSize="16" FontWeight="Bold">

                <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                    <Button Margin="10" Padding="10" FontSize="14" FontWeight="Bold" Width="150"
                            Command="{Binding OpenMaterialCommand}">
                        <StackPanel>
                            <Image Source="../Images/MainMenu/material.png" 
                                   Width="48" Height="48" Margin="5"/>
                            <TextBlock Text="Materiál" HorizontalAlignment="Center"/>
                        </StackPanel>
                    </Button>

                    <Button Margin="10" Padding="10" FontSize="14" FontWeight="Bold" Width="150"
                            Command="{Binding OpenPaletyCommand}">
                        <StackPanel>
                            <Image Source="../Images/MainMenu/paleta.png" 
                                   Width="48" Height="48" Margin="5"/>
                            <TextBlock Text="Palety" HorizontalAlignment="Center"/>
                        </StackPanel>
                    </Button>
                </StackPanel>
            </GroupBox>

            <GroupBox Header="Přehledy" Grid.Column="1" 
                      Margin="10" Padding="5"                      
                      FontSize="16" FontWeight="Bold">

                <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                    <Button Margin="10" Padding="10" FontSize="14" FontWeight="Bold" Width="150"
                            Command="{Binding OpenPrehledMaterialuCommand}">
                        <StackPanel>
                            <Image Source="../Images/MainMenu/prehledmat.png" 
                                   Width="48" Height="48" Margin="5"/>
                            <TextBlock Text="Přehled materiálu" HorizontalAlignment="Center"/>
                        </StackPanel>
                    </Button>

                    <Button Margin="10" Padding="10" FontSize="14" FontWeight="Bold" Width="150"
                            Command="{Binding OpenPrehledPaletCommand}">
                        <StackPanel>
                            <Image Source="../Images/MainMenu/prehledpal.png" 
                                   Width="48" Height="48" Margin="5"/>
                            <TextBlock Text="Přehled palet" HorizontalAlignment="Center"/>
                        </StackPanel>
                    </Button>
                </StackPanel>
            </GroupBox>

        </Grid>


        <CheckBox  Grid.Row="2"
                              HorizontalAlignment="Left"
                              VerticalAlignment="Center"  
                              FontSize="14"
                              Margin="5" 
                              IsChecked="{Binding TabulkyPovoleny, Mode=TwoWay}">
            <TextBlock Text="Povolit tabulky" Margin="0"/>
        </CheckBox>

        <TextBlock Text="(c) 2025 TUCNAK" Grid.Row="2" 
                   HorizontalAlignment="Right"
                   Margin="5"
                   VerticalAlignment="Center"/>

    </Grid>
</mah:MetroWindow>
